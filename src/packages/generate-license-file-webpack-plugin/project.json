{
  "name": "generate-license-file-webpack-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/generate-license-file-webpack-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/generate-license-file-webpack-plugin",
        "main": "packages/generate-license-file-webpack-plugin/src/index.ts",
        "tsConfig": "packages/generate-license-file-webpack-plugin/tsconfig.lib.json",
        "assets": ["packages/generate-license-file-webpack-plugin/*.md", "LICENSE.md"],
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "version": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/version.mjs generate-license-file-webpack-plugin {args.version}"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs generate-license-file-webpack-plugin {args.tag}"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/generate-license-file-webpack-plugin/**/*.ts"],
        "maxWarnings": 0
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/generate-license-file-webpack-plugin/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
